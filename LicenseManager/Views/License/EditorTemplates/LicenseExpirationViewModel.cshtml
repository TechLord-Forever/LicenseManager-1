@model LicenseManager.Models.ViewModels.LicenseExpirationViewModel

<h4>Standard integrations</h4>

<fieldset class="group">
    <legend>
        <span>Expiration Length</span>
    </legend>
    <div class="radio">
        @Html.RadioButtonFor(m => m.ExpirationDate, DateTime.Now.AddYears(1), new { @checked = "checked" })
        <label>1 year <small><em>Expires @DateTime.Now.AddYears(1).ToString("MMMM dd yyyy")</em></small></label>
    </div>
    <div class="radio">
        @Html.RadioButtonFor(m => m.ExpirationDate, DateTime.Now.AddYears(2))
        <label>2 years <small><em>Expires @DateTime.Now.AddYears(2).ToString("MMMM dd yyyy")</em></small></label>
    </div>
    <div class="radio">
        @Html.RadioButtonFor(m => m.ExpirationDate, DateTime.Now.AddYears(3))
        <label>3 years <small><em>Expires @DateTime.Now.AddYears(3).ToString("MMMM dd yyyy")</em></small></label>
    </div>
    <div class="radio">
        @Html.RadioButtonFor(m => m.ExpirationDate, DateTime.Now.AddYears(3))
        <label>3 years <small><em>Expires @DateTime.Now.AddYears(3).ToString("MMMM dd yyyy")</em></small></label>
    </div>
</fieldset>

